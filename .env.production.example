# Cloud Run 本番環境用の環境変数設定例
# このファイルをコピーして .env.production を作成し、実際の値を設定してください

ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8080

# Google OAuth 認証情報（本番用）
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-YOUR_PRODUCTION_CLIENT_SECRET
GOOGLE_REDIRECT_URI=https://YOUR_DOMAIN/callback/{project_id}

# JWT 秘密鍵（256-bit以上のランダム値を生成）
# 生成方法: openssl rand -base64 64
JWT_SECRET_KEY=YOUR_PRODUCTION_JWT_SECRET_KEY_REPLACE_WITH_RANDOM_VALUE
JWT_ALGORITHM=HS256
JWT_EXPIRY_DAYS=30

# Google Cloud プロジェクト設定
GCP_PROJECT_ID=interview-api-472500
USE_FIREBASE_EMULATOR=false
SECRET_MANAGER_ENABLED=true

# APIプロキシサーバー
API_PROXY_SERVER_URL=https://YOUR_API_PROXY_SERVER_URL

# CORS 設定（本番環境のドメインを設定）
# カンマ区切りで複数指定可能
ALLOWED_DOMAINS=i-seifu.jp,i-seifu.ac.jp
CORS_ORIGINS=https://YOUR_STREAMLIT_APP_URL,https://YOUR_FRONTEND_URL
CORS_ALLOW_CREDENTIALS=true

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 本番環境ではローカル設定を使用しない
USE_LOCAL_CONFIG=false
